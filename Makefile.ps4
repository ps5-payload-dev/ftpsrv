PS4_HOST ?= ps4
PS4_PORT ?= 9021

ifdef PS4_PAYLOAD_SDK
    include $(PS4_PAYLOAD_SDK)/toolchain/orbis.mk
else
    $(error PS4_PAYLOAD_SDK is undefined)
endif

ELF := ftpsrv-ps4.elf

VERSION_TAG := $(shell git describe --abbrev=6 --dirty --always --tags)
CFLAGS := -Wall -Werror -DVERSION_TAG=\"$(VERSION_TAG)\"

all: $(ELF)

$(ELF): main_ps4.c io.c srv.c cmd_common.c cmd_ps4.c notify.c
	$(CC) $(CFLAGS) -o $@ $^

clean:
	rm -f $(ELF)

test: $(ELF)
	$(PS4_DEPLOY) -h $(PS4_HOST) -p $(PS4_PORT) $^

